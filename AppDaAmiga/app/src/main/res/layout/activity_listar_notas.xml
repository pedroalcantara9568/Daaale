<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListarNotasActivity">
    <TextView
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:id="@+id/txtValor"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/listaAlunos"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:textColor="@android:color/black" app:layout_constraintHorizontal_bias="0.158"
            android:textStyle="bold"/>
    <ListView
            android:layout_width="426dp"
            android:layout_height="544dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/listaAlunos" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtValor" app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintVertical_bias="0.0">
    </ListView>
    <TextView
            android:text="Total : R$"
            android:layout_width="130dp"
            android:layout_height="37dp"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/listaAlunos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp"
            android:textColor="@android:color/black" android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>